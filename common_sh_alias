    alias diff='colordiff'
fi

# ccat
if which ccat >/dev/null 2>&1; then
    alias ccat='ccat -G Keyword="*glay*" -G Decimal="glay" -G Plaintext="glay"'
    #alias cat='ccat'
fi

# batcat to bat
if which batcat >/dev/null 2>&1; then
    alias bat='batcat'
    alias cat='batcat'
fi

# bat
